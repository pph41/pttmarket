<!-- item_other_message.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/other_message_nickname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other Nickname"
        android:textSize="12sp"
        android:padding="1dp"
        android:layout_alignParentStart="true"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:id="@+id/other_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_message_nickname_text_view"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/other_message_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/other_message_background"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/other_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="대화내용"
            android:background="@drawable/other_message_background"
            android:textColor="#000000" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/other_message">

        <TextView
            android:id="@+id/other_message_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:text="12:45 PM"
            android:padding="1dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>

</RelativeLayout>
