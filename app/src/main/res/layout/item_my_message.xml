<!-- item_my_message.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/my_message_nickname_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nickname"
        android:textSize="12sp"
        android:padding="1dp"
        android:layout_alignParentEnd="true"
        android:textColor="#FFFFFF"/>

    <RelativeLayout
        android:id="@+id/message_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_message_nickname_text_view"
        android:layout_alignParentEnd="true">

        <ImageView
            android:id="@+id/my_message_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:padding="5dp"
            android:background="@drawable/my_message_background"
            android:textColor="#FFFFFF" />

        <TextView
            android:id="@+id/my_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/my_message_background"
            android:layout_alignParentEnd="true"
            android:text="대화내용"
            android:textColor="#FFFFFF"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_image_view"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/my_message_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_alignParentEnd="true"
            android:text="12:34 PM"
            android:padding="1dp"
            android:textSize="12sp"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

</RelativeLayout>
